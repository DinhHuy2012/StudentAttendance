@model BusinessObjects.DTO.ClassDTO.AddClassDTO

<div class="container">
    <h2>Create Class</h2>
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ClassCode" class="control-label"></label>
                    <input type="text" asp-for="ClassCode" class="form-control" />
                    <span asp-validation-for="ClassCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ClassName" class="control-label"></label>
                    <input asp-for="ClassName" class="form-control" />
                    <span asp-validation-for="ClassName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" type="text" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
        </div>
        <div class="form-group" style="padding-top:50px">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
        </div>
        <h4 style="color:red">@ViewBag.Message</h4>
    </form>
</div>
